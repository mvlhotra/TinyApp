<h1>TinyApp</h1>
<%if(username !== undefined){%>
<h3>Logged in as: <%=username%></h3>
<form method="POST" action="/logout"><button type="submit" class="btn btn-dark">Log Out</button></form>
<%} else {%>

<form class="form-inline" action="/login" method="POST">
  <div class="form-group mb-2">
    <input class="form-control" type="text" name="username" placeholder="username" style="width: 300px; margin: 1em">
    <button type="submit" class="btn btn-dark">Log In</button>
  </div>
  <%}%>



</form>